#!/usr/bin/env groovy

// Jenkinsfile that defines a declarative Jenkins pipeline used to test 1Password Secrets plugin
pipeline
{
    agent any

    options
    {
        // Keep only 1 build artifact
        buildDiscarder(logRotator(artifactNumToKeepStr: '1'))
    }

    stages
    {
        stage('Getting Secret from 1Password')
        {
            environment
            {
                FILE_NAME   = 'secret.txt'
                SCRIPT_PATH = 'scripts/writefile.py'
                MYSECRET    = 'op://Jenkins/secret-text/credential' // This is an "API credential" called "secret-text" in the "Jenkins" 1Password Vault with a "credential" secret
            }

            steps
            {
                checkout(
                    scmGit(
                        branches: [[name: BRANCH_NAME]],
                        extensions: [[$class: 'SparseCheckoutPaths', sparseCheckoutPaths: [[path: SCRIPT_PATH]]]],
                        userRemoteConfigs: [[url: 'https://github.com/Minreaux/jenkins-test']]
                    )
                )

                withSecrets()
                {
                    pwsh("py ${SCRIPT_PATH} ${WORKSPACE}/${FILE_NAME} \$env:MYSECRET")
                }

                archiveArtifacts(artifacts: FILE_NAME)
            }
        }
    }
}
